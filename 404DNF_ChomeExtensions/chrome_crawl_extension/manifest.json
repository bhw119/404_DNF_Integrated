{
  "manifest_version": 3,
  "name": "404 DNF",
  "version": "1.3.0",
  "description": "다크패턴 탐지 졸업 프로젝트 크롬 확장 프로그램",
  "permissions": ["activeTab", "scripting", "downloads", "clipboardWrite", "sidePanel"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*",
    "https://translate.googleapis.com/*"
  ],
  "icons": {
    "16": "assets/icons/logo.png",
    "32": "assets/icons/logo.png",
    "48": "assets/icons/logo.png",
    "128": "assets/icons/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "텍스트/URL 추출",
    "default_icon": {
      "16": "assets/icons/logo.png",
      "32": "assets/icons/logo.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel_summary.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel_summary.html",
        "sidepanel_summary.js",
        "sidepanel_analysis.html",
        "sidepanel_analysis.js",
        "popup.html",
        "popup.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "content_highlight.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
